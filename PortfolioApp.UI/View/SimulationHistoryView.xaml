<UserControl
    x:Class="PortfolioApp.UI.View.SimulationHistoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PortfolioApp.UI.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="0,0,0,10"
            FontSize="20"
            FontWeight="Bold"
            Text="Simulation History" />

        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding SimulationRuns}"
            SelectedItem="{Binding SelectedRun, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Id}"
                    Header="Run ID" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding RunTime}"
                    Header="Timestamp" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding DurationMs}"
                    Header="Duration (ms)" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Summary}"
                    Header="Summary" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
